Tabs{
  margin-bottom: 100rpx;
}
.item-img{
    display: flex;
    flex-direction:row;  /*从左到右的水平方向为主轴*/
    justify-content:center; /*主轴居中对齐*/
    position: relative;
}
.item-img-num{
    position: absolute;
    font-weight: 900;
    height: 140px;
    bottom: 0;
}
.item-img-text{
    position: absolute;
    height: 110px;
    bottom: 0;
}

.confirm-btn {
  font-size: 13pt;
  line-height: 85rpx;
  height: 85rpx;
  background: #2db7f5;
  color: #fff;
  text-align: center;
  border-radius: 50px;
  margin: 0 10%;
}

.clear-btn{
    font-size: 13pt;
    line-height: 42px;
    background: #f4785b;
    color: #fff;
    text-align: center;
    border-radius: 50px;
    position: fixed;
    bottom: 0;
    width: 100%;
}

.today-wrong{
  display: list-item;
  border-bottom: 20rpx #e6eef2ad solid;
  border-top: 20rpx #e6eef2ad solid;
  line-height: 42px;
  margin-top: 32rpx;
}

.today-wrong-left{
  font-size: 14pt;
  font-weight: 800;
  margin-left: 36rpx;
  float: left;
}

.today-wrong-right{
  float: right;
  margin-right: 36rpx;
}

.group-item{
  line-height: 30px;
  display: flex;
  margin: 24rpx 32rpx;
  border-bottom: 4rpx #eaeaea solid;
}

.item-left{
  justify-content: flex-start;
  display: flex;
  width: 90%;
}

.item-right{
  justify-content: flex-end;
  display: flex;
  width: 10%;
}

.collection-line{
  border-bottom: 20rpx #e6eef2ad solid;
  margin-top: 32rpx;
  margin-bottom: 32rpx;
}